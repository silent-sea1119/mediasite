{
  "jspm": {
    "directories": {
      "baseURL": "src/static",
      "packages": "src/static/js/vendor/jspm_packages"
    },
    "configFile": "src/static/js/config.js",
    "dependencies": {
      "fetch": "npm:whatwg-fetch@^0.9.0",
      "react": "npm:react@^0.13.3",
      "react-dom": "npm:react-dom@^0.14.0",
      "react-router": "npm:react-router@^1.0.0-rc3",
      "underscore": "npm:underscore@^1.8.3"
    },
    "devDependencies": {
      "babel": "npm:babel-core@^5.8.24",
      "babel-runtime": "npm:babel-runtime@^5.8.24",
      "core-js": "npm:core-js@^1.1.4"
    }
  },
  "devDependencies": {
    "babel-jest": "^5.3.0",
    "fetch": "^0.3.6",
    "jest": "^0.1.40",
    "jest-cli": "^0.5.8",
    "jspm": "^0.16.10",
    "node-sass": "^3.3.3",
    "nodemon": "^1.7.1",
    "react": "^0.14.0",
    "react-addons-test-utils": "^0.14.0",
    "react-dom": "^0.14.0"
  },
  "scripts": {
    "build-js": "jspm bundle-sfx ./src/static/js/app/mediasite ./src/static/js/mediasite.js",
    "watch-js": "nodemon --watch ./src/static/js/app --ignore '*/__tests__/*.js' -x \"npm run build-js\"",
    "build-css": "node-sass --include-path scss src/static/scss/main.scss src/static/css/global.css",
    "watch-css": "nodemon -e scss -x \"npm run build-css\"",
    "test": "BABEL_JEST_STAGE=0 jest"
  },
  "jest": {
    "scriptPreprocessor": "node_modules/babel-jest",
    "testPathDirs": [
      "src/static/js/app"
    ],
    "unmockedModulePathPatterns": [
      "node_modules/react",
      "node_modules/react-dom"
    ]
  }
}
